

{# display the last funded goal and the first unfunded goal #}


<article class="message is-info">
  <div class="message-header">
     Funding Goal
    <figure class="image is-32x32 is-rounded">
      <a target="_blank" href="https://twitter.com/cj_clippy">
        <img class="is-rounded" src="/img/cj_clippy_sm.jpeg" />
      </a>
    </figure>
  </div>
  <div class="message-body has-text-centered">
    <div class="columns">
      {# the most recently funded goal #}
      <div class="column is-one-third">
        {% set fundedGoal = patreon.goals.complete[patreon.goals.complete.length-1] %}
        <p class="subtitle">${{ (fundedGoal.amount_cents*(fundedGoal.completed_percentage*0.01)/100) | round }} of ${{ fundedGoal.amount_cents / 100 }} ({{ fundedGoal.completed_percentage}}%)</p>

        <div class="notification is-success">FUNDED</div>

        <p>{{ fundedGoal.description }}</p>
      </div>


      {# the next unfunded goal #}
      <div class="column is-two-thirds">

        {% set unfundedGoal = patreon.goals.incomplete[0] %}
        <p class="subtitle">${{ (unfundedGoal.amount_cents*(unfundedGoal.completed_percentage*0.01)/100) | round }} of ${{ unfundedGoal.amount_cents / 100 }} ({{ unfundedGoal.completed_percentage}}%)</p>

        <progress class="progress is-info is-large" value="{{ unfundedGoal.completed_percentage }}" max="100">{{ unfundedGoal.completed_percentage }}%</progress>

        <p>{{ unfundedGoal.description }}</p>
      </div>
    </div>

    <p class="mt-3 subtitle is-4">Thank you, 
      <a href="/patrons">
      Patrons!
      </a>
    </p>
  </div>
</article>
