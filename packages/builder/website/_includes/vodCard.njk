{{ vod.data.thiccHash }}
<div class="column is-half-mobile is-one-third-tablet is-one-fifth-desktop">
  <div class="card">
    <div class="card-image">
      <a href="/vods/{{ vod.date | safeDate | url }}">
        <figure class="image is-16by9">
          {% set url = vod.thiccHash | buildIpfsUrl %}
          {% image url, vod.announceTitle if vod.announceTitle or vod.title %}
        </figure>
      </a>
      {# 
        {% if vod.thiccHash %}
          {{ vod.thiccHash | buildIpfsUrl }} 
          {% getFigureHtml vod.thiccHash | buildIpfsUrl, vod.announceTitle or vod.title %}
        {% endif %} 
      #}
    </div>
    <div class="card-content">
      <a href="{{ vod.url | url }}">
        <h3 class="heading">{{ vod.title or vod.announceTitle }}</h3>
        <h4 class="heading">DATE: {{ vod.date | htmlDateString }}</h3>
        <p class="description is-size-7">
          {% if vod.data.announceTitle %}
            {{ vod.data.announceTitle | urlDecode }}
          {% elseif vod.data.title %}
            {{ vod.data.title | urlDecode }}
          {% endif %}
        </p>
      </a>
    </div>
  </div>
</div>


