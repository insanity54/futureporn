{{ vod.data.thiccHash }}
<div class="column is-half-mobile is-one-third-tablet is-one-fifth-desktop">
  <div class="card">
    <a href="/vods/{{ vod.date | safeDate | url }}">
      <div class="card-image">
          <figure class="image is-16by9">
            {% set imageUrl = './website/favicon/favicon.png' %}

            {% if vod.thiccHash %}
              {% set imageUrl = vod.thiccHash | buildIpfsUrl %}
            {% endif %}

            {% if vod.announceTitle %}
              {% set imageTitle = vod.announceTitle %}
            {% else %}
              {% set imageTitle = vod.title %}
            {% endif %}

            {% image imageUrl, imageTitle %}
          </figure>
      </div>
      <div class="card-content">
        <h3 class="heading">{{ vod.title or vod.announceTitle }}</h3>
        <h4 class="heading">{{ vod.date | htmlDateString }}</h3>
        <p class="description is-size-7">
          {% if vod.data.announceTitle %}
            {{ vod.data.announceTitle | urlDecode }}
          {% elseif vod.data.title %}
            {{ vod.data.title | urlDecode }}
          {% endif %}
        </p>
      </div>
    </div>
  </a>
</div>


