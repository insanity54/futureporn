---
layout: layouts/base.njk
eleventyNavigation:
  key: Goals
  order: 3
---

<div class="content">

  <div class="box">
    <p class="title">Futureporn Goals</p>

    <p class="subtitle">Goals are listed in random order</p>
    <ul class="mb-6">
      
      {# Most goals are fetched from github #}
      {%- for goal in github.goals.incomplete %}
        <li><p>☐ {{ goal.title }}</p></li>
      {% endfor -%}


      {# funding goal #}
      {% if patreon.goals.complete.length === 0 %}
      <li><p>☐ Secure website funding</p></li>
      {% endif %}

      {# all vods archived progress #}
      {% if ipfsProgressPercentage !== 100 %}
      <li><p>☐ Archive every ProjektMelody Chaturbate stream. {% ipfsProgressPercentage db.vods %}</p></li>
      {% endif %}

      {# 240p encode progress #}
      {% if transcode240pProgressPercentage !== 100 %}
      <li><p>☐ Transcode a 240p version of each stream. {% transcode240pProgressPercentage db.vods %}</p></li>
      {% endif %}

      {# thumbnail progress #}
      {% if thumbnailProgressPercentage !== 100 %}
      <li><p>☐ Generate thumbnail for each stream. {% thumbnailProgressPercentage db.vods %}</p></li>
      {% endif %}

    </ul>




    <p class="is-size-4 mb-2">Completed Goals</p>
    <ul>
      {%- for goal in github.goals.complete %}
        <li><p>✅ {{ goal.title }}</p></li>
      {% endfor -%}


      {# funding goal completed #}
      {% if patreon.goals.complete.length > 0 %}
      <li><p>✅ Secure website funding</p></li>
      {% endif %}

      {% if ipfsProgressPercentage === 100 %}
      <li><p>✅ Archive every ProjektMelody Chaturbate stream.</p></li>
      {% endif %}

      {# 240p encode progress #}
      {% if transcode240pProgressPercentage === 100 %}
      <li><p>✅ Transcode a 240p version of each stream.</p></li>
      {% endif %}

      {# thumbnail progress #}
      {% if thumbnailProgressPercentage === 100 %}
      <li><p>✅ Generate thumbnail for each stream.</p></li>
      {% endif %}

    </ul>
  </div>
    
</div>