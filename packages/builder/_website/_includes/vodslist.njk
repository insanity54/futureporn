
{{ vodslist | dump }}

<table class="table">
  <thead>
      <tr>
        <th>Date</th>
        <th>Source VOD</th>
        {#<th>Video (720p)</th>#}
        {#<th>Video (480p)</th>#}
        {#<th>Video (360p)</th>#}
        <th>240p VOD</th>
        {#<th>Audio Only</th>#}
        <th>Thumbnail</th>
        <th>Title</th>
        <th>Annouce URL</th>
      </tr>
    </thead>
    <tbody>
      {% for vod in vodslist %}
      <tr>
        <td><a href="{{ vod.attributes.url | url }}">{{ vod.attributes.date | htmlDateString }}</a></td>
        <td>
          {% if vod.attributes.videoSrcHash %}
            <a target="_blank" href="{{ vod.attributes.videoSrcHash | buildIpfsUrl}}">
                <span>
                  <i class="fas fa-video"></i>
                </span>
                <span class="icon">
                  <i class="fas fa-external-link-alt"></i>
                </span>
            </a>
          {% endif %}
        </td>


        <td>
          {% if vod.attributes.video240Hash %}
            <a target="_blank" href="{{ vod.attributes.video240Hash | buildIpfsUrl}}">
                <span>
                  <i class="fas fa-video"></i>
                </span>
                <span class="icon">
                  <i class="fas fa-external-link-alt"></i>
                </span>
            </a>
          {% endif %}
        </td>


        <td>
          {% if vod.attributes.thiccHash %}
            <a target="_blank" href="{{ vod.attributes.thiccHash | buildIpfsUrl }}">
              <span class="icon">
                <i class="fas fa-image"></i>
              </span>
              <span class="icon">
                <i class="fas fa-external-link-alt"></i>
              </span>
            </a>
          {% endif %}
        </td>

        <td>
          {% if vod.attributes.announceTitle %}
            {{ vod.attributes.announceTitle | truncate(25) }}
          {% elseif vod.attributes.title %}
            {{ vod.attributes.title | truncate(25) }}
          {% endif %}
        </td>

        <td>
          {% if vod.attributes.announceUrl %}
            <a target="_blank" href="{{ vod.attributes.announceUrl }}">
              <span class="icon">
                <i class="fab fa-twitter"></i>
              </span>
              <span class="icon">
                <i class="fas fa-external-link-alt"></i>
              </span>
            </a>
          {% endif %}
        </td>

      </tr>
      {% endfor %}
    </tbody>
</table>
