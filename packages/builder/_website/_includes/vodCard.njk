


<div class="column is-half-mobile is-one-third-tablet is-one-fifth-desktop">
  <div class="card">

    <a href="/vods/{{ vod.attributes.date | safeDate | url }}">
      <div class="card-image">
          <figure class="image is-16by9">
            {% set imageUrl = './_website/favicon/favicon.png' %}

            {% if vod.attributes.thumbnail.data %}
              {% set imageUrl = vod.attributes.thumbnail.data.attributes.url %}
            {% endif %}

            {% if vod.attributes.announceTitle %}
              {% set imageTitle = vod.attributes.announceTitle %}
            {% else %}
              {% set imageTitle = vod.attributes.title %}
            {% endif %}

            {% image imageUrl, undefined, "" %}
          </figure>
      </div>
      <div class="card-content">
        <h3 class="heading">{{ vod.attributes.title or vod.attributes.announceTitle }}</h3>
        <h4 class="heading">{{ vod.attributes.date | htmlDateString }}</h3>
        <p class="description is-size-7">
          {% if vod.attributes.announceTitle %}
            {{ vod.attributes.announceTitle }}
          {% elseif vod.attributes.title %}
            {{ vod.attributes.title }}
          {% endif %}
        </p>

          <footer class="mt-3 card-footer">
            {% if vod.attributes.videoSrcHash %}
            <div class="card-footer-item">
              <span class="icon">
                <i class="fas fa-video"></i>
              </span>
              <span>Public</span>
            </div>
            {% endif %}
            {% if vod.attributes.muxAsset.data.attributes.playbackId and (not vod.attributes.muxAsset.data.attributes.deletionQueuedAt) %}
            <div class="card-footer-item">
              <span class="icon">
                <i class="fab fa-patreon"></i>
              </span>
              <span>Patron</span>
            </div>
            {% endif %}
          </footer>
      </div>
    </div>
  </a>
</div>

