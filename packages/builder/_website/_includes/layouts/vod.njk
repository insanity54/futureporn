{% extends "layouts/base.njk" %}

{% block head %}
  {{ super() }}
  <style>
    [x-cloak] { display: none !important; }
    video { height: 100% }
  </style>
  <link rel="stylesheet" href="/@includes/styles/player.scss">
  <link rel="stylesheet" href="/@root/node_modules/plyr/dist/plyr.css">
  <link rel="stylesheet" href="/@root/node_modules/@mux/videojs-kit/dist/index.css">
  <link rel="stylesheet" href="/@root/node_modules/@videojs/themes/dist/fantasy/index.css">

{% endblock %}


{% block content %}


  <div 
    x-data="player"
    class="container" 
  >

    {% set muxPlaybackId = vod.attributes.mux_video_uploader_mux_asset.data.attributes.playback_id %}
    <span x-cloak x-show="false" x-ref="muxPlaybackId" class="mux-playback-id" x-show="false" x-cloak>{{ muxPlaybackId }}</span>
    <span x-cloak x-show="false" x-ref="backendUrl">{{ env.STRAPI_BACKEND_URL }}</span>



  <div x-show="errors.length>0" class="notification is-warning">
    <button x-on:click="errors=[]" class="delete"></button>
    <span x-text="errors"></span>
  </div>
 
   <div class="block">
    <div class="box p-0 m-0">



    <video
      x-show="preference==='public'||hasMux===false"
      preload="none"
      id="public-player"
    >
      {%- if vod.attributes.videoSrcHash %}
      <source src="{{ vod.attributes.videoSrcHash | buildIpfsUrl }}" type="video/mp4" />
      {% endif %}

      {%- if vod.attributes.video240Hash %}
      <source src="{{ vod.attributes.video240Hash | buildIpfsUrl }}" type="video/mp4" />
      {% endif %}
    </video>

    <video 
      {# x-show="preference==='patron'&&hasMux===true&&jwt!==''" #}
      x-show="preference==='patron'&&hasMux===true"
      x-ref="patronPlayer"
      id="patron-player" 
      class="video-js vjs-16-9 vjs-theme-fantasy" 
      controls
      preload="none" 
      width="100%"
    >

    </video>

    <div
      x-show="hasMux" 
      class="m-3 p-3"
    >
      <p class="heading">Video Source Selector</p>

      <div class="control">
        <label class="radio">
          <input x-model="preference" value="public" type="radio" name="answer">
          Public (IPFS)
        </label>
        <label class="radio">
          <input x-model="preference" value="patron" type="radio" name="answer">
          Patron (CDN)
        </label>
      </div>



    </div>

    </div>
  </div>


  <div class="block">


    <div class="box">

      <h2 class="subtitle mb-0">
        {%- if vod.attributes.announceTitle %}
        {{ vod.attributes.announceTitle }}
        {% elif vod.attributes.title %}
        {{ vod.attributes.title }}
        {% endif %}
        
      </h2>
        {% if vod.attributes.date %}
          <p class="mt-0 mb-5">{{ vod.attributes.date | readableDate }}</p>
        {% endif %}


      <h2 class="heading">
        Download Links
      </h2>

      
      <div class="mb-5">

        <ul class="mb-5">
          {%- if vod.attributes.videoSrcHash %}
            {% set urlSrc = vod.attributes.videoSrcHash | buildIpfsUrl %}
          <li>
            <span>
              Source: <a href="{{ urlSrc }}">{{ urlSrc }}</a>
            </span>
          </li>
          {% endif %}

          {%- if vod.attributes.video720Hash %}
            {% set url720 = vod.attributes.video720Hash | buildIpfsUrl %}
          <li><span>720p: <a href="{{ url720 }}">{{ url720 }}</a></span></li>
          {% endif %}
          {%- if vod.attributes.video480Hash %}
          <li><span>480p: <a href="{{ vod.attributes.video480Hash | buildIpfsUrl }}"></a></span></li>
          {% endif %}
          {%- if vod.attributes.video360Hash %}
          <li><span>360p: <a href="{{ vod.attributes.video360Hash | buildIpfsUrl }}"></a></span></li>
          {% endif %}

          {%- if vod.attributes.video240Hash %}
            {% set url240 = vod.attributes.video240Hash | buildIpfsUrl %}
            <li>
              <span>240p: <a href="{{ url240 }}">{{ url240 }}</a>
              </span>
            </li>
          {% endif %}
        </ul>
      </div>


      <h2 class="heading">IPFS Content IDs</h2>

      <ul>
        {%- if vod.attributes.videoSrcHash %}
          <li><span>Source: <span class="tag">{{ vod.attributes.videoSrcHash | stripQueryString }}</span></span></li>
        {% endif %}
        {%- if vod.attributes.video720Hash %}
          <li><span>Source: <span class="tag">{{ vod.attributes.video720Hash | stripQueryString }}</span></span></li>
        {% endif %}
        {%- if vod.attributes.video480Hash %}
          <li><span>Source: <span class="tag">{{ vod.attributes.video480Hash | stripQueryString }}</span></span></li>
        {% endif %}
        {%- if vod.attributes.video360Hash %}
          <li><span>Source: <span class="tag">{{ vod.attributes.video360Hash | stripQueryString }}</span></span></li>
        {% endif %}
        {%- if vod.attributes.video240Hash %}
          <li><span>240p: <span class="tag">{{ vod.attributes.video240Hash | stripQueryString }}</span></span></li>
        {% endif %}
      </ul>


      {%- if vod.attributes.announceUrl %}
        <div class="mb-5">
          <h2 class="mt-3 heading">Stream Annoucement URL</h2>
          <a href="{{ vod.attributes.announceUrl }}">{{ vod.attributes.announceUrl }}</a>
        </div>
      {% endif %}

      {# 
        tags coming soon
        {%- if vod.attributes.tags %}
        <div class="mb-5">
          <h2 class="mt-3 heading">Tags</h2>
          {%- for tag in vod.attributes.tags %}
            <a href="/tags/{{ tag }}">{{ tag }}</a>
          {% endfor -%}
        </div>
      {% endif %} #}


      {%- if vod.attributes.note %}
        <div class="mb-3">
          <h2 class="heading">Note</h2>
          <p>{{ vod.attributes.note }}</p>
        </div>
      {% endif %}

      <hr>
        
      <div class="level">
        {% if pagination.href.previous %}
          <p>Prev Vod:
          <a 
          href="{{ pagination.href.previous }}">{{ pagination.page.previous.attributes.title or pagination.page.previous.attributes.announceTitle }}</a>
          </p>
        {% endif %}
        {% if pagination.href.next %}
          <p>Next Vod:
          <a 
          href="{{ pagination.href.next }}">{{ pagination.page.next.attributes.title or pagination.page.next.attributes.announceTitle }}
          </a>
          </p>
        {% endif %}

      </div>
    </div>
  </div>
</div>
{% endblock %}

{% block footer %}
  {{ super() }}
{% endblock %}

{% block scripts %}
  {{ super() }}
  <script type="module" src="/@includes/js/player.js"></script>

{% endblock %}


{% block end %}
  {{ super() }}
{% endblock %}
