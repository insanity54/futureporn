---
pagination:
  data: db.tags
  size: 1
  alias: tag
  filter:
    - all
    - nav
    - vod
    - vods
    - tagList
  addAllPagesToCollections: false
layout: layouts/base.njk
eleventyComputed:
  title: Tagged “{{ tag }}”
permalink: /tags/{{ tag | slugify }}/
---

{% set vodslist = db.vods | filterByTag(tag) %}

<div class="content box">
  <h1>Tagged “{{ tag }}”</h1>
</div>


<div class="columns is-multiline is-mobile">
  {% asyncEach vod in vodslist %}
    {% include "vodCard.njk" %}
  {% endeach %}
</div>

<div class="content box">
  <p>See <a href="{{ '/tags/' | url }}">all tags</a>.</p>
</div>