<div class="box">
  <h2 class="is-size-4 mb-3">ProjektMelody's Toys</h2>
  <div class="columns is-mobile is-multiline ">
    {% for toy in db.toys %}
      <div class="column is-one-fifth-mobile is-1-desktop is-2-tablet is-narrow-desktop">
        {% set imageUrl %}{{ toy.attributes.image.data.attributes.formats.thumbnail.url }}{% endset %}
        {% set displayName %}{{ toy.attributes.make }} {{ toy.attributes.model }}{% endset %}
        <a href="/tags/{{ toy.attributes.linkTag.data.attributes.name | slugify}}">
          {% image imageUrl, "image", displayName %}
          <p class="heading">{{toy.attributes.model}}</p>
        </a>
      </div>
    {% endfor %}
  </div>
</div>  


<div class="columns is-multiline is-mobile">
  {% asyncEach vod in pagination.items %}
    {% include "vodCard.njk" %}
  {% endeach %}
</div>


<div class="mt-5 block box">
  <nav class="pagination is-centered" role="navigation" aria-label="pagination">


    {% if not pagination.href.previous %}
      <a disabled class="pagination-previous is-disabled">
        <span class="icon">
          <i class="fas fa-arrow-left"></i>
        </span>
      </a>
    {% else %}
      <a class="pagination-previous" href="{{ pagination.href.previous }}">
        <span class="icon">
          <i class="fas fa-arrow-left"></i>
        </span>
      </a>
    {% endif %}
    
    {% if not pagination.href.next %}
      <button disabled class="pagination-next is-disabled">
        <span class="icon">
          <i class="fas fa-arrow-right"></i>
        </span>
      </button>
    {% else %}
      <a class="pagination-next" href="{{ pagination.href.next }}">
        <span class="icon">
          <i class="fas fa-arrow-right"></i>
        </span>
      </a>
    {% endif %}
    

    <ul class="pagination-list">

    {%- for page in pagination.pages %}
      <li>
          <a 
          class="pagination-link"
          aria-label="Goto page {{ loop.index0 }}"
          href="{{ pagination.hrefs[loop.index0] }}">
            {{ loop.index0 }}
          </a>
      </li>
    {%- endfor %}
    
    </ul>
  </nav>
</div>