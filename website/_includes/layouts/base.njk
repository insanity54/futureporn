
{% block start %}
<!DOCTYPE html>
<html lang="en">
  <head>
    {% favicon './website/favicon.png' %}
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="robots" content="index, follow">
    <meta name="description" content="{{ description or metadata.description }}">
    <meta property="og:title" content="{{ metadata.title }}" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="{{ metadata.url }}" />
    <meta property="og:image" content="{{ metadata.url }}favicon.ico" />
    <meta property="og:description" content="{{ metadata.description }}" />
    <meta name="RATING" content="RTA-5042-1996-1400-1577-RTA" />
    <link rel="stylesheet" href="{% webpackAsset 'base.css' %}">
    <link rel="canonical" href="{{ metadata.url }}">
    <link rel="alternate" type="application/rss+xml" title="Subscribe to see what's new" href="{{ metadata.url }}feed/feed.xml" />
    <title>{{ metadata.title }}</title>
  </head>
  <body>
    <nav class="navbar" role="navigation" aria-label="main navigation">
      <div class="navbar-brand">
        <a class="navbar-item" href="/">
          <h1 class="title">{{ metadata.title }}</h1>
        </a>
      </div>
      <a class="navbar-item" href="/about">About</a>
      <a class="navbar-item" href="/faq">FAQ</a>
      <a class="navbar-item" href="/goals">Goals</a>
      <a class="navbar-item" href="/patrons">Patrons</a>
      <a class="navbar-item" href="/feed">RSS</a>
      <a class="navbar-item" href="/api">API</a>
      {# <a class="navbar-item" href="/feedback">Feedback</a> COMING SOMEDAY #}
